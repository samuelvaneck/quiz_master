<%= form_for [@question, @awnser] do |f| %>
  <div class='form-group'>
    <%= f.label :content %>
    <%= f.text_field :content, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :score %>
    <%= f.number_field :score, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :question %>
    <%= f.collection_select :question, Question.all, :id, :content, { selected: @question.id },  { class: 'form-control' } %>
  </div>

  <div class='d-flex flex-row'>
    <div class='mr-2'><%= link_to 'Cancel', questions_path, class: 'btn btn-secondary' %></div>
    <div><%= f.submit nil, class: 'btn btn-primary' %></div>
  </div>
<% end %>
