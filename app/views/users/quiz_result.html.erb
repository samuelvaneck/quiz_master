<div class="card">
  <div class="card-body">
    <h5 class="card-title">Your score</h5>
    <div class="card-text my-2">
      <h4><%= @user.quiz_score %></h4>
    </div>
    <div class="card-text my-4">
      <div class="d-flex flex-column">
        <ul class="list-group">
          <li class="list-group-item">
            <div>Awnsers</div>
          </li>
          <% @user.awnsers.each do |awnser| %>
            <li class="list-group-item">
              <div class='my-1'>
                Question: <%= awnser.question.content %>
              </div>
              <span class='badge badge-primary mr-2' title='score'><%= awnser.score %> points</span> 
              <span><%= awnser.content %></span>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>